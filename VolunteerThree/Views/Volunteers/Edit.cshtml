@model VolunteerThree.Models.Volunteer

@{
    ViewData["Title"] = "Edit";
}

<h5>Изменить</h5>
<hr />
<div class="row justify-content-xl-center">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VId" />
            <div class="form-group">
                <label asp-for="VSurname" class="control-label"></label>
                <input asp-for="VSurname" class="form-control" />
                <span asp-validation-for="VSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VName" class="control-label"></label>
                <input asp-for="VName" class="form-control" />
                <span asp-validation-for="VName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VBirthday" class="control-label"></label>
                <input type="date" asp-for="VBirthday" class="form-control" />
                <span asp-validation-for="VBirthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VPersonNumber" class="control-label"></label>
                <input id="pin" asp-for="VPersonNumber" class="form-control" />
                <span asp-validation-for="VPersonNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZonId" class="control-label"></label>
                <select name="ZonId" class="form-control">
                    @foreach (VolunteerThree.Models.Reg category in ViewBag.Region)
                    {
                        <optgroup label="@category.RName">
                            @foreach (VolunteerThree.Models.Zon subCategory in category.zons)
                            {
                                <option value="@subCategory.Id">@subCategory.ZName </option>
                            }
                        </optgroup>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="VPhoneNumber" class="control-label"></label>
                <input id="phone" asp-for="VPhoneNumber" class="form-control" />
                <span asp-validation-for="VPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-outline-secondary" asp-action="DetailsOfVolunteer">Назад</a>
                <input type="submit" value="Сохранить" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.maskedinput.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<script>
    jQuery(function ($) {

        $("#phone").mask("(0999)- 99-99-99");
        $("pin").mask("(99999999999999)")
    });
</script>
